{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "react"
    ],
    "rules": {
      // Customize your rules here
      "react/react-in-jsx-scope": "off", // Not needed for React 17+
      "no-unused-vars": "warn" // Warn on unused variables
    },
    "settings": {
      "react": {
        "version": "detect" // Automatically detect the React version
      }
    }
  }
  